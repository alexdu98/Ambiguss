{% extends "@App/Administration/base_admin.html.twig" %}

{% block title %}Liste des groupes{% endblock %}

{% block titre %}Liste des groupes{% endblock %}

{% block contenu %}
    <div class="fos_user_group_list">
        <a href="{{ path('fos_user_group_new') }}" class="btn btn-primary">Ajouter un groupe</a>
        <hr>
        <ul>
            {% for group in groups %}
                <li>
                    <a href="{{ path('fos_user_group_show', {'groupName': group.getName()} ) }}">{{ group.name }}</a>
                    { {{ group.roles|join(', ') }} }
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}