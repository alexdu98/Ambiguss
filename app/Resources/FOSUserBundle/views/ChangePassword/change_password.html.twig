{% extends "base.html.twig" %}

{% block title %}Changement de mot de passe{% endblock %}

{% block titre %}Changement de mot de passe{% endblock %}

{% block contenu %}
    <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2 bulle">
        <div class="container-fluid">
            <div class="row">
                <ul class="nav nav-tabs">
                    <li role="presentation"><a href="{{ path('fos_user_profile_show') }}">Profil</a></li>
                    <li role="presentation"><a href="{{ path('fos_user_profile_edit') }}">Modification</a></li>
                    <li role="presentation" class="active"><a href="#">Mot de passe</a></li>
                </ul>
            </div>
            <br>
            <div class="row">
                <div class="col-md-8 col-md-offset-2 well">
                    {{ form_start(form , {'form-type' : 'horizontal'}) }}

                    {{ form_errors(form) }}

                    {{ form_row(form.current_password) }}
                    {{ form_row(form.plainPassword) }}
                    {{ form_row(form.Valider) }}

                    {{ form_rest(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}