<div class="container-fluid">
	{{ form_start(form) }}

	{{ form_errors(form) }}

	<div class="row">
		<div class="col-md-3">
			{{ form_label(form.signale) }} : {{ form_widget(form.signale) }}
		</div>
		<div class="col-md-3">
			{{ form_label(form.renamable) }} : {{ form_widget(form.renamable) }}
		</div>
	</div>

	<br>

	<div class="row vcenter">
		<div class="col-md-3">
			{{ form_label(form.banni) }} : {{ form_widget(form.banni) }}
		</div>
		<div class="col-md-9">
			{{ form_row(form.commentaireBan) }}
			{{ form_row(form.dateDeban) }}
		</div>
	</div>

	<br>

	<div class="row">
		{{ form_widget(form.modifier) }}
	</div>

	<br>

	<div class="row">
		<div class="form-group text-center">
			<a id="toggleJugements" class="btn btn-primary">Voir/cacher les jugements en cours</a>
		</div>
		<div class="form-group">
			<div id="jugements" hidden></div>
		</div>
	</div>

	{{ form_end(form) }}
</div>
