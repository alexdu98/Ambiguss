{% extends "base.html.twig" %}

{% block title %}Modification du profil{% endblock %}

{% block titre %}Modification du profil{% endblock %}

{% block contenu %}
    <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2 bulle">
        <div class="container-fluid">
            {{ include('@App/Include/menu_profil.html.twig') }}
            <br>
            <div class="row">
                <div class="col-md-8 col-md-offset-2 well">

                    {{ form_start(form , {'form-type' : 'horizontal'}) }}

                    {{ form_errors(form) }}

                    {% if form.username is defined %}
                        {{ form_row(form.username) }}
                    {% endif %}
                    {{ form_row(form.email) }}
                    {{ form_row(form.Sexe) }}
                    {{ form_row(form.dateNaissance) }}
                    {{ form_row(form.Newsletter) }}

                    {{ form_row(form.Valider) }}

                    {{ form_rest(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
