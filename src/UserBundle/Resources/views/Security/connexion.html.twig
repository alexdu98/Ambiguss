{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block css %}
{% endblock %}

{% block titre %}Formulaire de connexion{% endblock %}

{% block contenu %}

	<div class="row">
		<div class="col-xs-12 col-sm-10 col-md-4 col-sm-offset-1 col-md-offset-4">
			<button class="btn btn-facebook btn-block" id="login-facebook">
				<i class="fa fa-facebook" aria-hidden="true"></i>
				Se connecter avec Facebook
			</button>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-12 col-sm-10 col-md-4 col-sm-offset-1 col-md-offset-4">
			<button class="btn btn-twitter btn-block" id="login-twitter">
				<i class="fa fa-twitter" aria-hidden="true"></i>
				Se connecter avec Twitter
			</button>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-12 col-sm-10 col-md-4 col-sm-offset-1 col-md-offset-4 well">
			{% for flashMessage in app.session.flashbag.get('succes') %}
				<div class="alert alert-success">{{ flashMessage }}</div>
			{% endfor %}
			{% for flashMessage in app.session.flashbag.get('erreur') %}
				<div class="alert alert-danger">{{ flashMessage }}</div>
			{% endfor %}
			{% if erreur %}
				<div class="alert alert-danger">{{ erreur.message|trans({}, 'connexion') }}</div>
			{% endif %}

			{{ form_start(form, {action:path('user_connexion_verification')}) }}

			{{ form_errors(form) }}

			{{ form_row(form.Pseudo) }}

			{{ form_row(form.Mdp) }}

			<div class="row">
				<div class="col-xs-6 col-sm-8">
					{{ form_widget(form.KeepCo) }}
				</div>
				<div class="col-xs-6 col-sm-4 text-right">
					{{ form_widget(form.Connexion) }}
				</div>
			</div>

			{{ form_rest(form) }}
			{{ form_end(form) }}
			<br>
			<div class="text-right">
				<a href="{{ path('user_oubli_mdp') }}">Mot de passe oubli√© ?</a>
			</div>
			<div class="text-right">
				<a href="{{ path('user_inscription') }}">Pas encore inscrit ?</a>
			</div>
		</div>
	</div>

{% endblock %}