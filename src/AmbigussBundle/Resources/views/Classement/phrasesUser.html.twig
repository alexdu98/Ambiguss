{% extends 'base.html.twig' %}

{% block title %}Classement{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ asset('assets/vendor/DataTables/datatables.css') }}">
{% endblock %}

{% block titre %}Mes phrases{% endblock %}

{% block contenu %}
	<div class="well">
		<table id="classement" class="display responsive no-wrap table table-striped table-bordered" cellspacing="0" width="100%">
			<thead>
			<tr>
				<th>#</th>
				<th>Phrase</th>
				<th>Nombre de likes</th>
				<th>Gains</th>
				<th>Date de création</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tfoot>
			<tr>
				<th>#</th>
				<th>Phrase</th>
				<th>Nombre de likes</th>
				<th>Gains</th>
				<th>Date de création</th>
				<th>Actions</th>
			</tr>
			</tfoot>
			<tbody>
			{% for row in classement %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>
						<a title="Jouer cette phrase" style="color:black" href="{{ path('ambiguss_game' , {'id':row.id}) }}">{{ getPhraseHTML(row.contenu) | raw }}</a>
					</td>
					<td>{{ row.nbLikes }}</td>
					<td>{{ row.nbPoints|default('0') }}</td>
					<td data-order="{{ row.dateCreation|date("U") }}">{{ row.dateCreation|date("d/m/Y à H:i") }}</td>
					<td>
						<a href="{{ path('ambiguss_phrase_edit', {id : row.id}) }}" class="btn btn-warning"
								{% if row.dateCreation|date("U") < "now"|date("U") - dureeAvantJouabiliteSecondes %}
									disabled
								{% endif %}
						>Modifier</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block js %}
	<script src="{{ asset('assets/vendor/DataTables/datatables.js') }}"></script>
	<script>
		$(document).ready(function () {
			$('#classement').DataTable({
				stateSave: true, // Enregistre les configurations
				stateSaveParams: function (settings, data) {
					data.start = 0; // On enregistre pas la page
					data.order = [[3, "desc"]]; // On ordonne sur les gains
					data.search = {}; // On enregistre pas la recherche
				},
				stateDuration: 0, // pour une durée illimitée
				order: [[3, 'desc']],
				responsive: true,
				language: {url: '{{ asset('assets/vendor/DataTables/datatables.french.lang') }}'}
			});
		});
	</script>
{% endblock %}