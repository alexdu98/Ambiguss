{% extends 'base.html.twig' %}

{% block title %}Classement{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/vendor/DataTables/datatables.css') }}">
{% endblock %}

{% block titre %}Les phrases les plus populaires{% endblock %}

{% block contenu %}
    <div class="well">
        <table id="classement" class="display responsive no-wrap table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>#</th>
                <th>Phrase</th>
                <th>Nombre de likes</th>
                <th>Gains </th>
                <th>Date de création</th>


            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>#</th>
                <th>Phrase</th>
                <th>Nombre de likes</th>
                <th>Gains </th>
                <th>Date de création</th>


            </tr>
            </tfoot>
            <tbody>
            {% for row in classement %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ row.contenu  | raw}}</td>
                    <td>{{ row.nbLikes }}</td>
                    <td> </td>
                    <td>{{ row.dateCreation|date("d/m/Y") }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/vendor/DataTables/datatables.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#classement').DataTable({
                order: [[3, 'desc']],
                responsive: true,
                language: {url: '{{ asset('assets/vendor/DataTables/datatables.french.lang') }}'}
            });
        });
    </script>
{% endblock %}