<div class="container-fluid">

	{{ form_start(form) }}

	{{ form_errors(form) }}

	{{ form_row(form.valeur) }}

	<div class="row">
		<div class="col-md-3">
			{{ form_label(form.signale) }} : {{ form_widget(form.signale) }}
		</div>
		<div class="col-md-3">
			{{ form_label(form.visible) }} : {{ form_widget(form.visible) }}
		</div>
	</div>

	{{ form_rest(form) }}
	{{ form_end(form) }}

	<div class="row form-error">

	</div>

	<div class="form-group text-center">
		<a id="toggleJugements" class="btn btn-primary">Voir/cacher les jugements en cours</a>
	</div>
	<div class="form-group">
		<div id="jugements" hidden></div>
	</div>

</div>
