<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Ambiguss | {% block title %}{% endblock %}</title>

	    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
	    <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.min.css') }}">
	    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
        {% block css %}{% endblock %}

	    <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}">
    </head>
    <body>
	    <header class="page-row">
		    <nav class="navbar navbar-default navbar-static-top" id="nav-login">
			    <div class="container-fluid">
				    <div class="col-md-10 col-md-offset-1 text-right">
					    <ul>
						    {% if app.user %}
							    <li><a href="#">{{ app.user.pseudo|capitalize }}</a></li> •
							    <li><a href="{{ path('user_deconnexion') }}">Se déconnecter</a></li>
						    {% else %}
							    <li><a href="{{ path('user_inscription') }}">S'inscrire</a></li>
							    <li><a href="{{ path('user_connexion') }}">Se connecter</a></li>
						    {% endif %}
					    </ul>
				    </div>
			    </div>
		    </nav>
		    <nav class="navbar navbar-default navbar-static-top" id="nav-main">
			    <div class="container-fluid">
				    <div class="col-md-10 col-md-offset-1">
					    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						    <span class="sr-only">Toggle navigation</span>
						    <span class="icon-bar"></span>
						    <span class="icon-bar"></span>
						    <span class="icon-bar"></span>
					    </button>
					    <a class="navbar-brand" href="{{ path('app_accueil') }}">
						    <img alt="Ambiguss logo" src="{{ asset('favicon.png') }}">
						    <span>Amb</span>iguss
					    </a>
					    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
						    <ul class="nav navbar-nav">
							    <li>
								    <a href="{{ path('app_accueil') }}">Jouer<span class="sr-only">(current)</span></a>
							    </li>
							    {% if app.user %}
								    <li>
									    <a href="{{ path('ambiguss_phrase') }}">Phrase<span class="sr-only">(current)
										    </span></a>
								    </li>
							    {% endif %}
							    <li class="dropdown">
								    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Export <span class="caret"></span></a>
								    <ul class="dropdown-menu">
									    <li><a href="#">Action</a></li>
									    <li><a href="#">Another action</a></li>
									    <li><a href="#">Something else here</a></li>
									    <li role="separator" class="divider"></li>
									    <li><a href="#">Separated link</a></li>
									    <li role="separator" class="divider"></li>
									    <li><a href="#">One more separated link</a></li>
								    </ul>
							    </li>
						    </ul>
					    </div>
				    </div>
			    </div>
		    </nav>
	    </header>

	    <article class="page-row page-row-expanded">
		    <div class="container-fluid">
			    <div class="col-md-12">
				    <h1>{% block titre %}{% endblock %}</h1>
				    {% block contenu %}{% endblock %}
			    </div>
		    </div>
	    </article>

	    <footer class="page-row">
		    <div class="container-fluid">
			    <div class="row" id="footer-link">
				    <div class="col-xs-6 col-sm-6 col-xs-offset-3 col-sm-offset-3">
					    <div class="container-fluid">
						    <div class="row">
							    <div class="col-md-6">
								    <h4>Informations</h4>
								    <ul>
									    <li><a href="{{ path('app_mentions') }}">Mentions légales</a></li>
									    <li><a href="{{ path('app_conditions') }}">Conditions d'utilisation</a></li>
								    </ul>
							    </div>
							    <div class="col-md-6">
								    <h4>À propos</h4>
								    <ul>
									    <li><a href="{{ path('app_apropos') }}">Ambiguss</a></li>
									    <li><a href="{{ path('app_contact') }}">Contact</a></li>
								    </ul>
							    </div>
						    </div>
					    </div>
				    </div>
			    </div>
			    <div class="row" id="footer-copyright">
				    <div class="col-xs-6 col-sm-6 col-xs-offset-3 col-sm-offset-3 text-center" id="copyright">
					    • <a href="{{ path('app_accueil') }}">Ambiguss</a> © {{ "now" | date("Y") }} •
				    </div>
			    </div>
		    </div>
	    </footer>

	    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
	    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
	    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
	    <script src="{{ asset('assets/js/main.js') }}"></script>
        {% block js %}{% endblock %}
    </body>
</html>
{{ checkAndAdd() }}